<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javajo.sunshineRoad.mappers.FavoriteMapper">
<!--    Oracle-->
    <insert id="postFavorite" parameterType="Favorites">
        INSERT INTO favorite VALUES(favorite_seq.NEXTVAL, #{uId}, #{boardId}, #{postTypeId})
    </insert>

    <select id="checkIsFavorite" resultType="int" parameterType="Favorites">
        SELECT COUNT(*) FROM favorite WHERE u_id = #{uId} AND board_id = #{boardId}
    </select>

    <select id="getAllFavoriteInfo" resultType="Favorites">
        SELECT
            f.f_id,
            f.u_id,
            f.board_id,
            f.post_type_id,
            type.post_type_name
        FROM
            favorite f
                INNER JOIN
            post_type type ON (f.post_type_id = type.post_type_id)
    </select>

    <select id="getAllFavoriteInfoByUser" resultType="Favorites" parameterType="int">
        SELECT
            f.f_id,
            f.u_id,
            f.board_id,
            f.post_type_id,
            type.post_type_name
        FROM
            favorite f
                INNER JOIN
            post_type type ON (f.post_type_id = type.post_type_id)
        WHERE
            u_id = #{uId}
    </select>

    <select id="getAllFavoriteInfoByUserAndPostType" resultType="Favorites" parameterType="Favorites">
        SELECT
            f.f_id,
            f.u_id,
            f.board_id,
            f.post_type_id,
            type.post_type_name
        FROM
            favorite f
                INNER JOIN
            post_type type ON (f.post_type_id = type.post_type_id)
        WHERE
            f.u_id = #{uId} AND f.post_type_id = #{postTypeId}
    </select>

    <delete id="deleteFavorite" parameterType="Favorites">
        DELETE FROM favorite
        WHERE
            u_id = #{uId} AND board_id = #{boardId}
    </delete>

