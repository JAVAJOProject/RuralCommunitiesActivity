<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.javajo.sunshineRoad.mappers.ReservationContentMapper">
	<resultMap id="ReservationContentDTO" type="ReservationContent">
		<result property="reservationId" column="reservation_id" />
		<result property="paymentId" column="payment_id" />
		<result property="aId" column="a_id" />
		<result property="uId" column="u_id" />
		<result property="reservationHeadcount" column="reservation_headcount" />
		<result property="reviewStatus" column="review_status" />
		<result property="reservationStatus" column="reservation_status" />
		<result property="reservationDate" column="reservation_date" />
	</resultMap>
	
	<select id="getReservationContentData"
		resultType="ReservationContent" parameterType="int">
		SELECT
		reservation_id, payment_id,
		a_id, u_id,
		reservation_headcount, review_status, reservation_status,
		reservation_date
		FROM reservation
		WHERE reservation_id = #{rId}
	</select>
</mapper>